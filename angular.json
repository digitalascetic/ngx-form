{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "@digitalascetic/ngx-form": {
      "root": "projects/digitalascetic/ngx-form",
      "sourceRoot": "projects/digitalascetic/ngx-form/src",
      "projectType": "library",
      "prefix": "ascform",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "projects/digitalascetic/ngx-form/tsconfig.lib.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/digitalascetic/ngx-form/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/digitalascetic/ngx-form/tsconfig.lib.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/digitalascetic/ngx-form/tsconfig.spec.json",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/digitalascetic/ngx-form/tsconfig.lib.json",
              "projects/digitalascetic/ngx-form/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  }
}
